<h1>Welcome to Comic Books</h1>
<p>Keep Reading!</p>

<div class="row">
	<% @products.each do |product| %>
	    <div class="col-sm-6 col-md-4">
	     <div class="well text-center">
		 	<% if product.image.url.nil? == false %>
		  	<p><%= image_tag product.image.url, size: 250 %></p>
		 	<% end %>
		 	<h3><%= link_to product.name, product %></h3>
		 	<p><%= number_to_currency product.price %></p>
		 	<p>
		 	   <a href="#" data-toggle="modal" dota-target="#myModal_<%= product.id %>">
		 	    <span class="glyphicon glyphicon-plus"></span>Quick Info</a>
		 	</p>
		 </div>	
	    </div>
	<% end %>    
</div>	    


       <!-- Button trigger modal -->
       <button class="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
       Lunch demo modal	
       </button>
        <!-- Modal -->
		<div class="modal face" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-lavel="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" id="myModalLabel">Modal title</h4>
					</div>
					<div class="modal-body">
						...
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>	
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>			
				</div>		
			</div>	
		</div>	
		<!-- End Modal -->



	



