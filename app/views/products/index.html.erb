<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Publisher</th>
      <th>Rating</th>
      <th>Writer</th>
      <th>Pencilier</th>
      <th>Cover artist</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price, :precision => (product.price.round == product.price)? 0 : 2) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.publisher %></td>
        <td><%= product.rating %></td>
        <td><%= product.writer %></td>
        <td><%= product.pencilier %></td>
        <td><%= product.cover_artist %></td>
        <td><%= product.category.name %></td>
        <td><%= product.brand %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

